$primary = rgba(0,0,0, 0.8)
$accent = green

$primary-text = rgba(255,255,255, 0.8)

figure, html, body, main, svg
  margin: 0
  padding: 0
  border: none
  width: 100%
  height: 100%
  min-height: 100%
  overflow: hidden


.message
  box-sizing: border-box
  border: thin solid $accent
  background-color: $primary
  color: $primary-text
  padding: 1em
  position: fixed
  bottom: 0px
  width: 100%

  .label
      background-color: $primary

.ca
  transition: all 500ms linear
  transform-origin: center

.zoom
  transform: scale(2)

.ca.zoom
  fill: blue
  path.ca
    fill: blue
